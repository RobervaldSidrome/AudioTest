<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash" >

    <TextView
        android:id="@+id/text_som"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="143dp"
        android:layout_y="25dp"
        android:text="SOM 01" />

    <TextView
        android:id="@+id/text_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:layout_y="56dp"
        android:text="Aperte play para ouvir" />

    <Button
        android:id="@+id/button_start_play"
        android:layout_width="61dp"
        android:layout_height="54dp"
        android:layout_x="132dp"
        android:layout_y="84dp"
        android:background="@drawable/button_start_play" />

    <TextView
        android:id="@+id/text_emissao_som"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_x="53dp"
        android:layout_y="145dp"
