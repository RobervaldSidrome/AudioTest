    <TextView
        android:id="@+id/text_ouvido_esq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="325dp"
        android:text="Ouvido Esquerdo" />

    <Button
        android:id="@+id/button_orelha_esquerda"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_x="64dp"
        android:layout_y="273dp"
        android:background="@drawable/button_orelha_esquerda" />

    <TextView
        android:id="@+id/text_ouvido_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="194dp"
        android:layout_y="324dp"
        android:text="Ouvido Direito" />

    <Button
        android:id="@+id/button_orelha_direita"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_x="211dp"
        android:layout_y="272dp"
        android:background="@drawable/button_orelha_direita" />

</AbsoluteLayout>